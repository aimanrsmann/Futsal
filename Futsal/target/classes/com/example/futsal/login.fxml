<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.futsal.LoginController" style="-fx-background-color: #E8F5E9;">
    <!-- Center Login Form -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E8F5E9; -fx-padding: 40px; -fx-border-radius: 10; -fx-border-color: #004D40; -fx-border-width: 2; -fx-border-insets: 10;">
            <Label text="Futsal Booking System Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #004D40;" />
            <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-border-color: #004D40; -fx-border-radius: 5; -fx-padding: 5; -fx-background-radius: 5;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-border-color: #004D40; -fx-border-radius: 5; -fx-padding: 5; -fx-background-radius: 5;" />
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-background-color: #004D40; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5;" />
            <Button fx:id="registerButton" text="Register" onAction="#handleRegister" style="-fx-background-color: #004D40; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-border-radius: 5;" />
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10px; -fx-background-color: #004D40;">
            <Label text="Â© 2024 Futsal Booking System" style="-fx-text-fill: white; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
</BorderPane>
