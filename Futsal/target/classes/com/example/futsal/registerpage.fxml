<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.futsal.RegisterController">
    <children>
        <Label layoutX="40.0" layoutY="20.0" text="Register New User" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="40.0" layoutY="80.0" text="Username:" />
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="75.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="130.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="125.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="180.0" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" layoutX="150.0" layoutY="175.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="230.0" text="Gender:" />
        <RadioButton fx:id="maleRadioButton" layoutX="150.0" layoutY="225.0" text="Male" toggleGroup="$genderToggleGroup" />
        <RadioButton fx:id="femaleRadioButton" layoutX="220.0" layoutY="225.0" text="Female" toggleGroup="$genderToggleGroup" />

        <Label layoutX="40.0" layoutY="280.0" text="Agree to Terms:" />
        <CheckBox fx:id="termsCheckBox" layoutX="150.0" layoutY="275.0" text="I agree" />

        <Button fx:id="registerButton" layoutX="150.0" layoutY="320.0" text="Register" onAction="#handleRegister" />
        <Button fx:id="cancelButton" layoutX="250.0" layoutY="320.0" text="Cancel" onAction="#handleCancel" />
    </children>
</AnchorPane>
